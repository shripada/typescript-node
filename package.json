{
  "name": "typescript-node",
  "version": "1.0.0",
  "description": "Template for the node + ts + eslint + prettier integrated project",
  "main": "index.js",
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write 'src/**/*.{ts,js,json}'",
    "lint": "eslint --ignore-path .gitignore --fix 'src/**/*.{ts,js}'",
    "build": "tsc",
    "test": "jest ./src",
    "dev": "nodemon ./src/index.ts",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "author": "",
  "license": "ISC",
